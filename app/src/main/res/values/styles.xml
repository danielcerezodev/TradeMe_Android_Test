<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorDark</item>
    </style>

    <style name="TitleGridView" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorDark</item>
    </style>

    <style name="TitleListing" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListingStartingBid" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorDark</item>
    </style>

    <style name="StartingBidGridView" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Tagline" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="SectionTitle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Nickname" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorDark</item>
    </style>

    <style name="Feedback" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorDark</item>
    </style>

</resources>
